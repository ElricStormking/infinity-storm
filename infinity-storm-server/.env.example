# Environment Variables for Infinity Storm Server

# Server Configuration
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:3000

# JWT Authentication
JWT_ACCESS_SECRET=your-super-secret-access-token-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-min-32-chars
JWT_ACCESS_EXPIRY=30m
JWT_REFRESH_EXPIRY=7d

# Redis Configuration (for session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false
# Alternative: Single URL format
# REDIS_URL=redis://localhost:6379

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:54322/infinity_storm
DB_HOST=localhost
DB_PORT=5432
DB_NAME=infinity_storm
DB_USER=username
DB_PASSWORD=password
DB_SSL=false

# Logging
LOG_LEVEL=info
LOG_FILE=logs/combined.log

# Security Headers
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Portal Integration (if using separate web portal)
PORTAL_URL=http://localhost:3001
PORTAL_API_KEY=your-portal-api-key