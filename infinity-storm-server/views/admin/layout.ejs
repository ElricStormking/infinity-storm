<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Admin Panel - Infinity Storm' %></title>
    
    <!-- Security headers -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff">
    <meta http-equiv="X-Frame-Options" content="DENY">
    <meta http-equiv="X-XSS-Protection" content="1; mode=block">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom Admin CSS -->
    <link href="/admin/css/admin.css" rel="stylesheet">
    
    <% if (typeof csrfToken !== 'undefined' && csrfToken) { %>
    <meta name="csrf-token" content="<%= csrfToken %>">
    <% } %>
</head>
<body class="admin-body">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/admin/dashboard">
                <i class="bi bi-gem me-2"></i>
                <span>Infinity Storm Admin</span>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link <%= locals.activeNav === 'dashboard' ? 'active' : '' %>" href="/admin/dashboard">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= locals.activeNav === 'players' ? 'active' : '' %>" href="/admin/players">
                            <i class="bi bi-people"></i> Players
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= locals.activeNav === 'audit' ? 'active' : '' %>" href="/admin/audit/logs">
                            <i class="bi bi-journal-check"></i> Audit Logs
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <!-- Session Status -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="sessionDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-clock-history"></i>
                            <span id="session-status">Session Active</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><h6 class="dropdown-header">Session Information</h6></li>
                            <li><span class="dropdown-item-text small">
                                <i class="bi bi-person-badge"></i> <%= typeof admin !== 'undefined' ? admin.username : 'Admin' %>
                            </span></li>
                            <li><span class="dropdown-item-text small" id="session-expires">
                                <i class="bi bi-clock"></i> Session expires in <span id="time-remaining">calculating...</span>
                            </span></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#" onclick="extendSession()">
                                <i class="bi bi-arrow-clockwise"></i> Extend Session
                            </a></li>
                        </ul>
                    </li>
                    
                    <!-- Admin User -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i> <%= typeof admin !== 'undefined' ? admin.username : 'Admin' %>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><h6 class="dropdown-header">Admin Account</h6></li>
                            <li><span class="dropdown-item-text small">
                                <i class="bi bi-shield-check"></i> Administrator
                            </span></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form action="/admin/logout" method="POST" class="d-inline">
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content Area -->
    <div class="admin-container">
        <!-- Sidebar (for larger screens) -->
        <aside class="admin-sidebar d-none d-lg-block">
            <div class="sidebar-nav">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link <%= locals.activeNav === 'dashboard' ? 'active' : '' %>" href="/admin/dashboard">
                            <i class="bi bi-speedometer2"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= locals.activeNav === 'players' ? 'active' : '' %>" href="/admin/players">
                            <i class="bi bi-people"></i>
                            <span>Player Management</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= locals.activeNav === 'audit' ? 'active' : '' %>" href="/admin/audit/logs">
                            <i class="bi bi-journal-check"></i>
                            <span>Audit Logs</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <hr class="sidebar-divider">
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/" target="_blank">
                            <i class="bi bi-game-controller-fill"></i>
                            <span>View Game</span>
                            <i class="bi bi-box-arrow-up-right ms-auto small"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="admin-main">
            <!-- Alert Messages -->
            <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>
            
            <% if (typeof message !== 'undefined' && message) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i>
                <%= message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>
            
            <!-- Session Warning -->
            <div id="session-warning" class="alert alert-warning alert-dismissible fade" role="alert" style="display: none;">
                <i class="bi bi-clock-fill"></i>
                Your session will expire soon. 
                <button type="button" class="btn btn-sm btn-outline-warning ms-2" onclick="extendSession()">
                    Extend Session
                </button>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>

            <!-- Page Content -->
            <div class="admin-content">
                <%- body %>
            </div>
        </main>
    </div>

    <!-- Footer -->
    <footer class="admin-footer">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <span class="text-muted small">
                        &copy; <%= new Date().getFullYear() %> Infinity Storm Casino Management System
                    </span>
                </div>
                <div class="col-md-6 text-end">
                    <span class="text-muted small">
                        <i class="bi bi-shield-lock"></i> Secure Admin Panel
                        <span class="ms-2" id="current-time"></span>
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Admin Panel JavaScript -->
    <script src="/admin/js/admin.js"></script>
    
    <!-- Page-specific scripts -->
    <% if (typeof scripts !== 'undefined') { %>
        <% scripts.forEach(function(script) { %>
            <script src="<%= script %>"></script>
        <% }); %>
    <% } %>
    
    <!-- Inline scripts -->
    <% if (typeof inlineScript !== 'undefined') { %>
        <script><%= inlineScript %></script>
    <% } %>
</body>
</html>